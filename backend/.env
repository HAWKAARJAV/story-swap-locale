# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/hyperlocal-story-swap

# Authentication
JWT_SECRET=hyperlocal-story-swap-jwt-secret-key-development
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=hyperlocal-story-swap-refresh-token-secret-development
REFRESH_TOKEN_EXPIRES_IN=30d

# Google OAuth (placeholder values)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS S3 Storage (placeholder values)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=hyperlocal-story-swap-media

# Email Service (NodeMailer - placeholder values)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Maps
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Moderation
PROFANITY_API_KEY=your-profanity-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Admin Credentials (for seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=test1234